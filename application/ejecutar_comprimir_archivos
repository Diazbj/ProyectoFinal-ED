#!/bin/bash

# Add error handling and check if directories exist
base_dir=$(pwd)
parent_dir=$(dirname "$base_dir")

if [ ! -d "$base_dir" ]; then
    echo "Error: El directorio del proyecto no existe"
    exit 1
fi

# Cambiar al directorio donde está la carpeta src
cd "$parent_dir/src/main/java" || exit 1

# Compilar las clases (agregando manejo de errores)
if ! javac proyecto/proyectofinaled/Main.java; then
    echo "Error: Falló la compilación"
    read -p "Presiona Enter para continuar..."
    exit 1
fi

# Ejecutar el programa
java proyecto.proyectofinaled.Main comprimirArchivos > salidaCompresion.txt 2> errorCompresion.log

# Verificar si la ejecución fue exitosa
if [ $? -eq 0 ]; then
    echo "El programa se ejecutó exitosamente. Revisa salidaCompresion.txt para ver los resultados."
else
    echo "Hubo un error durante la ejecución del programa."
fi

read -p "Presiona Enter para continuar..."
